# Magento 2 Docker Environment Variables
# Copy this file to .env and update with your values

# Composer Credentials (Get from: https://marketplace.magento.com/customer/accessKeys/)
COMPOSER_USERNAME=your_public_key_here
COMPOSER_PASSWORD=your_private_key_here

# Magento Version
MAGENTO_VERSION=2.4.7

# Base Configuration
BASE_URL=http://localhost
BACKEND_FRONTNAME=admin

# Admin User
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_EMAIL=admin@example.com
ADMIN_USER=admin
ADMIN_PASSWORD=Admin123!

# Database Configuration
DB_HOST=mysql
DB_NAME=magento2
DB_USER=magento
DB_PASSWORD=magento
MYSQL_ROOT_PASSWORD=root

# OpenSearch Configuration
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=magento
RABBITMQ_PASSWORD=magento

# PHP Configuration
PHP_MEMORY_LIMIT=4G
PHP_MAX_EXECUTION_TIME=1800

# Timezone
TIMEZONE=America/New_York

# Magento Mode (developer, production, default)
MAGE_MODE=developer
